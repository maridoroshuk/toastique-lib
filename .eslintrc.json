{
  "extends": "airbnb",
  "rules": {
    "import/prefer-default-export": 0,
    "class-methods-use-this": 0,
    "react/jsx-props-no-spreading": 0
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"],
          ["~", "./src/js"]
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },

  "env": {
    "browser": true,
    "node": true
  },

  "globals": {
    "cy": false,
    "Cypress": false,
    "describe": false,
    "context": false,
    "beforeEach": false,
    "afterEach": false,
    "it": false,
    "assert": false,
    "expect": false
  },

  "parser": "@babel/eslint-parser"
}
